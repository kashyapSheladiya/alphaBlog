<%= render "shared/errors", obj: @article %>

<div class = "row">
    <div class = "col-xl-12">
        <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            

            <div class = "form-group row">
                <div class="control-label col-xl-2 col-form-label">
                    <%= f.label :title %>
                </div>
                <div class="col-xl-10">
                    <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
                </div>
            </div>

             <div class = "form-group row">
                <div class="control-label col-xl-2 col-form-label">
                    <%= f.label :description %>
                </div>
                <div class="col-xl-10">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xl-2 offset-xl-5" >
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>

        <% end %>
        <div class="form-group row">
            <div class="col-xl-4 offset-xl-4">
                [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
            </div>
        </div>
    </div>
</div>