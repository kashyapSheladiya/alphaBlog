<h1 align = "center">All Alpha Blogger</h1>

<div align = "center">
        <% @users.each do |user| %>
            <ul class="listing">
                <div class="row">
                    <div class="card card-body bg-light col-xl-8 offset-xl-2">
                        <li><%= link_to gravatar_for(user), user_path(user) %></li>
                        <li class="article-title">
                        <%= link_to user.username, user_path(user) %>
                        </li>
                        <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
                        <% if logged_in? and current_user.admin? %>
                            <li>
                                <%= link_to "Delete this User", user_path(user), method: :delete,
                                    data: { confirm: "Are you sure you want to delete the user and all their articles?"}%>
                            </li>
                        <% end %>
                    </div>
                </div>
            </ul>
        <% end %>
    <div class="offset-xl-5 mt-4">
        <%= will_paginate %>
    </div>
</div>