<h1 class= "mt-3", align="center" > Sign Up for Alpha Blog </h1>
<%= render "shared/errors", obj: @user %>

<div class = "row card card-body bg-light mt-3">
    <div class = "col-xl-12">
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            

            <div class = "form-group row mt-3">
                <div class="control-label col-xl-2 col-form-label">
                    <%= f.label :username %>
                </div>
                <div class="col-xl-10">
                    <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
                </div>
            </div>

            <div class = "form-group row">
                <div class="control-label col-xl-2 col-form-label">
                    <%= f.label :email %>
                </div>
                <div class="col-xl-10">
                    <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
                </div>
            </div>

            <div class = "form-group row">
                <div class="control-label col-xl-2 col-form-label">
                    <%= f.label :password %>
                </div>
                <div class="col-xl-10">
                    <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %>
                </div>
            </div>

            <div class="form-group">
                <div class="col-xl-2 offset-xl-5" >
                    <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>
                </div>
            </div>

        <% end %>
        <div class="form-group row">
            <div class="col-xl-4 offset-xl-4">
                [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
            </div>
        </div>
    </div>
</div>